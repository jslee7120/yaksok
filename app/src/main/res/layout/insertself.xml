<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="내 약 이름"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_DiseaseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="약 성분"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/lo_EditText"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/bt_ListAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAF0E6"
                    android:text="+"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총" />

                <EditText
                    android:id="@+id/et_Dosagi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회 복용" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약 복용 시간"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1회차    " />

                <TextView
                    android:id="@+id/tv_1_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음" />


                <TextView
                    android:id="@+id/tv_1_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          " />

                <Button
                    android:id="@+id/bt_1time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 설정" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2회차    " />

                <TextView
                    android:id="@+id/tv_2_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음" />


                <TextView
                    android:id="@+id/tv_2_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          "/>


                <Button
                    android:id="@+id/bt_2time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 설정" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3회차    " />

                <TextView
                    android:id="@+id/tv_3_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음" />


                <TextView
                    android:id="@+id/tv_3_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          " />


                <Button
                    android:id="@+id/bt_3time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 설정" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/bt_PillInsert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등 록" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
